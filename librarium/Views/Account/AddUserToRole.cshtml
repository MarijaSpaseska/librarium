<link href="@Url.Content("~/Content/font.css")" rel="stylesheet" type="text/css" />

@model librarium.Models.AddToRoleModel

@{
    ViewBag.Title = "View";
}

<h2>Add user to a role</h2>
@using (Html.BeginForm("AddUserToRole", "Account"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Email)

        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

</div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })

    </div>


        <button class="btn btn-default btn-success" type="submit">Save</button>


}